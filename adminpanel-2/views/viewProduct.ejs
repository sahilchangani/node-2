<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SeoDash Free Bootstrap Admin Template by Adminmart</title>
  <link rel="shortcut icon" type="image/png" href="../assets/images/logos/seodashlogo.png" />
  <link rel="stylesheet" href="../../node_modules/simplebar/dist/simplebar.min.css">
  <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>
<style>
    html, body {
      height: 100%;
    }
    .page-wrapper {
      min-height: 100%;
    }
  </style>
<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
     <%-include("aside")%>
    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
        <%-include("header")%>
      <!--  Header End -->
      <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <!-- <div class="card"></div> -->
                <!-- <div class="card"></div> -->
                <!-- <div class="card"></div> -->
                <div class="card">
                    <div class="card-body">
                        <!-- <h5 class="card-title">Basic Datatable</h5> -->
                        <div class="table-responsive">
                            <table id="" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Product Name</th>
                                        <th>sub category Name</th>
                                        <th>category Name</th>
                                        <th>Image</th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%data.map((e,i)=>{%>
                                        <tr>
                                            <td>
                                                <%= i+1 %>
                                            </td>
                                            
                                            <td>
                                                <%= e.productName %>
                                            </td>

                                            <td>
                                                <%=  e.SubcategoryId.subCatName  %>
                                            </td>

                                            <td>
                                                <%=  e.SubcategoryId.categoryId.categoryName  %>
                                            </td>
                                           

                                            <td>
                                                <% if ( e.SubcategoryId.categoryId.image) { %>
                                                    <img style="height: 50px; width: 50px;" src="/<%= e.SubcategoryId.categoryId.image %>" alt="image">
                                                <% } else { %>
                                                    <span>No Image</span>
                                                <% } %>
                                            </td>
                                            <td>
                                               
                                                <a
                                                    href="/deleteProduct?id=<%=e._id%>"><button>Delete</button></a>
                                            </td>
                                        </tr>
                                        <%})%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    </div>
  </div>
  <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
  <script src="../assets/js/sidebarmenu.js"></script>
  <script src="../assets/js/app.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>
